pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                // Cloner le dépôt Git
                git 'https://github.com/csurqunix/StringInverser.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    // Vérifier si le système est Unix ou autre
                    if (isUnix()) {
                        // Si Unix, exécuter la commande 'make' via l'interpréteur 'sh'
                        sh 'make'
                    } else {
                        // Sinon, lancer la commande 'make' via l'utilitaire 'bat' pour Windows
                        bat 'make'
                    }
                }
            }
        }
        stage('Permissions') {
            when {
                // Ce stage n'est exécuté que si le système est Unix
                expression { isUnix() }
            }
            steps {
                // Donner les droits d'exécution au binaire via 'chmod'
                sh 'chmod +x stringinverser'
            }
        }
        stage('Nettoyage') {
            steps {
                script {
                    // Exécuter la commande 'make clean' selon le système
                    if (isUnix()) {
                        sh 'make clean'
                    } else {
                        bat 'make clean'
                    }
                }
            }
        }
    }
}